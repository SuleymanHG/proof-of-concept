{% render 'partials/head.liquid' %}
<main class="prikbord-pagina">
    <div class="chat-container">
        {% for note in notes %}
        <div class="message" data-id="{{ note.id }}">
            {{ note.message }}
        </div>
        {% endfor %}
    </div>

    <!-- Formulier onderaan als chat-input -->
    <div class="message-form">
        <form action="/notice-board" method="POST">
            <input type="text" name="textArea" placeholder="Typ een bericht..." autocomplete="off" required />
            <button type="submit">Verzenden</button>
        </form>
    </div>
</main>